# vim: set ft=gitconfig:

[include]
  path = .gitconfig.local
[alias]
	st = status
	di = diff
	dc = diff --cached
[color]
	ui = auto
[push]
	default = simple
[core]
  excludesfile = ~/.gitignore
[alias]
  bubble = merge --no-ff
  fixup = commit --fixup
  st = status
  ci = commit
  co = checkout
  con = rebase --continue
  di = diff
  dc = diff --cached
  dcs = diff --cached --stat
  amend = commit --amend
  aa = add --all
  b = branch
  pullff = pull --ff-only
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  rim = rebase -i --autosquash origin/master
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
[rebase]
  autosquash = true
[gc]
  auto = 0
